[colors]
	accent = #069178
	bckgrd = #121212
	select = #111111


	background = 			${self.bckgrd}
	background-alt = 		${self.select}
	foreground = 			#A5ffffff
	primary = 				${self.accent}
	alert = 				#bd2c40
	transparent = 			#00000000



[global/wm]
	margin-top = 5
	margin-bottom = 0



[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30
	screenchange-reload = true
	bargapp= 25
	barwidth = 100%
	barheigh = 48



[bar/top]
	monitor = ${env:MONITOR}
	monitor-strict = true
	fixed-center = true
	dpi = 96
	bottom = false
	width = ${settings.barwidth}
	height = ${settings.barheigh}
	offset-x = 0
	offset-y = 0
	background = ${colors.background}
	foreground = ${colors.foreground}
	overline-size = 0
	overline-color = #f00
	underline-size = 2
	underline-color = #00f
	border-top-size = ${settings.bargapp}
	border-left-size = ${settings.bargapp}
	border-right-size = ${settings.bargapp}
	border-bottom-size = 0
	border-color = ${colors.transparent}
	radius-top = 10
	radius-bottom = 10
	spacing = 2
	padding-left = 4
	padding-right = 4
	module-margin-left = 2
	module-margin-right = 2  
	font-0 = Hack:size=12;2
	font-1 = FontAwesome:pixelsize=12;3
	font-2 = Font Awesome 5 Free:pixelsize=12;3
	font-3 = Font Awesome 5 Free Solid:pixelsize=12;3
	font-4 = Font Awesome 5 Brands:pixelsize=12;3
	font-5 = unifont:size=12;3
	tray-position = right
	tray-padding = 4

	modules-left = cpu memory
	modules-right = date




[bar/workspaces]
	monitor = ${env:MONITOR}
	monitor-strict = true
	dpi = 96
	bottom = true
	width = ${settings.barwidth}
	height = 26
	background = ${colors.transparent}
	foreground = ${colors.foreground}
	border-top-size = 0
	border-bottom-size = 10
	border-color = ${colors.transparent}
	font-0 = Hack:size=10;1
	font-5 = unifont:size=14;1
	modules-center = i3



[module/i3]
	type = internal/i3
	format = <label-state> <label-mode>
	index-sort = true
	wrapping-scroll = false
	strip-wsnumbers = false
	pin-workspaces = true
	enable-scroll = false
	label-mode-padding = 0
	label-mode-foreground = ${colors.foreground}
	label-mode-background = ${colors.primary}
	label-focused = %name%
	label-focused-foreground= ${colors.background}
	label-focused-background = ${colors.primary}
	label-focused-underline = ${colors.primary}
	label-focused-padding = 8
	label-unfocused = %name%
	label-unfocused-padding = 8
	label-unfocused-background = ${colors.background}
	label-urgent = %name%
	label-urgent-foreground= ${colors.alert}
	label-urgent-background = ${colors.background-alt}
	label-urgent-padding = 8
	label-visible = %name%
	label-visible-background = ${colors.background-alt}
	label-visible-padding = ${self.label-focused-padding}
	
		
[module/search]
	type = custom/script
	exec = echo "	    Search:    	"
	interval = 60
	label = %output%
	format = <label>
	format-foreground = ${colors.background}
	format-background = ${colors.primary}
	
	
[module/cpu]
	format-label = internal/cpu
	format = <label>
	type = internal/cpu
	interval = 2
	label = "CPU: %percentage%%"
	format-foreground = ${colors.primary}


[module/memory]
	type = internal/memory
	interval = 2
	label = "RAM: %percentage_used%%"
	format-foreground = ${colors.primary}


[module/date]
	type = internal/date
	interval = 1.0
	date = %a %b %d, 
	time = %I:%M %p
	date-alt = %A, %d %B %Y
	time-alt = %H:%M:%S
	label = %date% %time%
	format = <label>  ï€— 
	format-padding = 0
	format-foreground = ${colors.primary}

